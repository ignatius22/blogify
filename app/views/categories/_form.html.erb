<%=render 'articles/checks', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-3 form-bg rounded", local: true) do |f| %>
<div class="form-group row">
    <%=f.label :name, "Category name", class: 'col-2 col-form-label text-info' %>
    <div class="col-10">
        <%=f.text_field :name, class: 'form-control shadow rounded', placeholder: "create a name" %>
    </div>
</div>
<div class="form-group row justify-content-center">
    <%=f.submit class: 'btn btn-outline-info btn-lg'%>
</div>
</div>
<% end %>