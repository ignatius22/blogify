<div class="container">
	<div class="row justify-content-center container">
		<div class="col-10">
			<%=render 'checks', obj: @article %>
		<%= form_with(model: @article, class: "shadow p-3 mb-3 form-bg rounded", local: true) do |f| %>

		<div class="form-group row">
			<%=f.label :title, class: 'col-2 col-form-label text-info' %>
			<div class="col-10">
				<%=f.text_field :title, class: 'form-control shadow rounded', placeholder: "Enter article title" %>
			</div>
		</div>

		<div class="form-group row">
			<%=f.label :description, class: 'col-2 col-form-label text-info' %>
			<div class="col-10">
				<%=f.text_area :description, rows: 10 , class: 'form-control shadow rounded', placeholder: "Enter article description" %>
			</div>
		</div>

		
		<div class="form-group row">
			<%=f.label :category, class: 'col-2 col-form-label text-info' %>
			<div class="col-8">
				<%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Make your selection from the list below(can be empty)"}, {multiple: true, size: 3, class: "custom-select shadow rounded"}) %>
			</div>
		</div>

		 <div class="form-group row justify-content-center">
		 	<%=f.submit class: 'btn btn-outline-info btn-lg' %>
		 </div>
		<% end %>
		</div>
		<div class="mb-3">
		  <%=link_to '[Cancel and return to listing page]', articles_path, class: "text-info" %>
		</div>
	</div>
</div>
